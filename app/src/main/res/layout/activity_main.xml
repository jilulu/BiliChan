<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_main_view_pager_horizontal_ntb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_main_wrapper_ntb_horizontal" />

    <FrameLayout
        android:id="@+id/activity_main_wrapper_ntb_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/activity_main_bg_ntb_horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="bottom"
            android:background="#eee"/>

        <com.gigamole.library.NavigationTabBar
            android:id="@+id/activity_main_ntb_horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:ntb_preview_colors="@array/tabcolors"
            app:ntb_active_color="#fff"
            app:ntb_inactive_color="#777"
            app:ntb_badge_gravity="top"
            app:ntb_badge_position="right"
            app:ntb_badged="false"
            app:ntb_scaled="true"
            app:ntb_title_mode="active"
            app:ntb_titled="true" />

    </FrameLayout>

</RelativeLayout>
