<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/commonParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/museMemberProfileImage"
                android:src="@drawable/honoka" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/museMemberName"
                    android:text="高坂 穂乃果"
                    android:textSize="33sp"
                    android:textColor="#233333"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/museMemberNameHiragana"
                    android:text="こうさか ほのか"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/museMemberNameRomaji"
                    android:text="Kōsaka Honoka"
                    android:textSize="22sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_below="@id/museMemberProfileImage"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/basics"
            android:layout_below="@id/museMemberProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:text="Basics"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/basics"
            android:id="@+id/basicsText"
            android:text="@string/honoka_basics"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp" />

        <View
            android:layout_below="@id/basicsText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/manga"
            android:layout_below="@id/basicsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:text="漫畫版設定"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mangaText"
            android:layout_below="@id/manga"
            android:text="@string/honoka_mangatxt"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp" />

        <View
            android:layout_below="@id/mangaText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/anime"
            android:layout_below="@id/mangaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:text="動畫版設定"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/anime"
            android:text="@string/honoka_animetxt"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/animeText" />

        <View
            android:layout_below="@id/animeText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:layout_below="@id/animeText"
            android:id="@+id/card_gallery_entrance"
            android:text="Enter Gallery"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#FFFF4081"
            android:background="?attr/selectableItemBackground"
            android:clickable="true" />


    </LinearLayout>

</android.support.v7.widget.CardView>